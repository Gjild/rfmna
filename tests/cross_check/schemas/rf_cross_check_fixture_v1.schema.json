{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tests/cross_check/schemas/rf_cross_check_fixture_v1.schema.json",
  "title": "RFCrossCheckFixtureV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "fixture_id",
    "scenario",
    "reference",
    "tolerance_source",
    "tolerance_profiles",
    "frequencies_hz",
    "z0_ohm",
    "ports",
    "parameters"
  ],
  "properties": {
    "schema_version": {
      "const": 1
    },
    "fixture_id": {
      "type": "string"
    },
    "scenario": {
      "type": "string",
      "enum": [
        "one_port_shunt_rc",
        "two_port_coupled_rc"
      ]
    },
    "reference": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source",
        "equations"
      ],
      "properties": {
        "source": {
          "type": "string"
        },
        "equations": {
          "type": "string"
        }
      }
    },
    "tolerance_source": {
      "type": "string"
    },
    "tolerance_profiles": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "y",
        "z",
        "s"
      ],
      "properties": {
        "y": {
          "type": "string"
        },
        "z": {
          "type": "string"
        },
        "s": {
          "type": "string"
        }
      }
    },
    "frequencies_hz": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "number"
      }
    },
    "z0_ohm": {
      "type": "number"
    },
    "ports": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "type": "string"
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    }
  }
}
